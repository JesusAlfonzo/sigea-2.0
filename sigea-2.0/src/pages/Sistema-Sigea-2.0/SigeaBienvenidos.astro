---
import Layout from "../../layouts/Layout.astro";
import Nav from "../../components/Nav-Sistema-Sigea/Nav-Sistema-Bienvenidos.astro";
---

<Layout title="Sigea 2.0 | Bienvenidos">
  <main>
    <Nav />
    <h1 class="text-center text-4xl font-bold p-20">
      Bienvenidos a <span class="text-blue-700">Sigea 2.0</span>
    </h1>

    <!-- tabla de estado de los estudiantes -->
    <div class="w-3/4 mx-auto">
      <div class="font-bold text-xl text-blue-700">
        <h2>Estado de los estudiantes</h2>
      </div>
      <div class="bg-gray-300 mx-26">
        <div class="mx-4 sm:mx-auto py-8 px-4 sm:px-6 lg:px-8">
          <div class="w-64 p-4">
            <label for="carrera" class="block text-sm font-medium text-gray-700"
              >Materia:</label
            >
            <select
              id="carrera"
              name="carrera"
              class="mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md"
            >
              <option value="informatica">Calculo</option>
              <option value="administracion">Programación</option>
              <option value="contaduria">ing. software</option>
              <option value="educacion">Ingles</option>
            </select>
          </div>
          <div class="w-64 p-4">
            <label for="sesion" class="block text-sm font-medium text-gray-700"
              >Sección:</label
            >
            <select
              id="sesion"
              name="sesion"
              class="mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md"
            >
              <option value="a">Sección A</option>
              <option value="b">Sección B</option>
              <option value="c">Sección C</option>
            </select>
          </div>
          <div class="py-6">
            <div class="relative overflow-x-auto">
              <table class="w-full text-sm text-left rtl:text-right text-black">
                <thead class="text-xs text-white uppercase dark:bg-gray-800">
                  <tr>
                    <th scope="col" class="px-6 py-3"> Estudiante</th>
                    <th scope="col" class="px-6 py-3"> Cedula</th>
                    <th scope="col" class="px-6 py-3"> Materia</th>
                    <th scope="col" class="px-6 py-3"> Evalu. Realizadas</th>
                    <th scope="col" class="px-6 py-3"> Nota Ref.</th>
                    <th scope="col" class="px-6 py-3"> % Evaluado</th>
                  </tr>
                </thead>
                <tbody>
                  <tr class="bg-white border-b">
                    <th
                      scope="row"
                      class="px-6 py-4 font-medium whitespace-nowrap text-black"
                    >
                      María Fernanda
                    </th>
                    <td class="px-6 py-4"> 123456789</td>
                    <td class="px-6 py-4"> Cálculo 1</td>
                    <td class="px-6 py-4"> 4</td>
                    <td class="px-6 py-4"> 20/20</td>
                    <td class="px-6 py-4"> 100%</td>
                  </tr>
                  <tr class="bg-white border-b">
                    <th
                      scope="row"
                      class="px-6 py-4 font-medium whitespace-nowrap text-black"
                    >
                      Jesus Alfonzo
                    </th>
                    <td class="px-6 py-4"> 123456789</td>
                    <td class="px-6 py-4"> Programación</td>
                    <td class="px-6 py-4"> 4</td>
                    <td class="px-6 py-4"> 20/20</td>
                    <td class="px-6 py-4"> 100%</td>
                  </tr>
                  <tr class="bg-white">
                    <th
                      scope="row"
                      class="px-6 py-4 font-medium whitespace-nowrap text-black"
                    >
                      Pedro Pérez
                    </th>
                    <td class="px-6 py-4"> 123456789</td>
                    <td class="px-6 py-4"> Estadistica</td>
                    <td class="px-6 py-4"> 4</td>
                    <td class="px-6 py-4"> 20/20</td>
                    <td class="px-6 py-4"> 100%</td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>

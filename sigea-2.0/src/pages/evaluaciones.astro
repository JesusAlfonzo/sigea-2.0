---
import Layout from "../layouts/Layout.astro";
import Nav from "../components/nav-bienvenidos/Nav-bienvenidos-evaluaciones.astro";
---

<Layout title="Sigea 2.0 | Evaluaciones">
  <main>
    <Nav />

    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.1.2/dist/tailwind.min.css" rel="stylesheet">
    <main class="flex">
      <div class="w-2/3 mx-auto mt-12 mr-2 overflow-y-auto max-h-screen p-4">
        <div class="font-bold text-xl text-blue-700">
          <h2>NOTAS DE LOS ESTUDIANTES</h2>
        </div>
        <div class="bg-gray-300">
          <div class="mx-4 sm:mx-auto py-4 px-2 sm:px-4 lg:px-6">
            <div class="w-80 p-2">
              <label for="carrera" class="block text-sm font-medium text-gray-700">Materia:</label> 
              <select id="carrera" name="carrera" class="mt-1 block w-full pl-2 pr-8 py-1 text-sm border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 rounded-md">
                <option value="informatica">Calculo</option>
                <option value="administracion">Programación</option>
                <option value="contaduria">Ing. Software</option>
                <option value="educacion">Inglés</option>
              </select>
            </div>
            <div class="w-80 p-2">
              <label for="sesion" class="block text-sm font-medium text-gray-700">Sección:</label> 
              <select id="sesion" name="sesion" class="mt-1 block w-full pl-2 pr-8 py-1 text-sm border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 rounded-md">
                <option value="a">Sección A</option>
                <option value="b">Sección B</option>
                <option value="c">Sección C</option>
              </select>
            </div>
            <div class="w-80 p-2">
              <label for="sesion" class="block text-sm font-medium text-gray-700">Evaluación:</label>
              <select id="sesion" name="sesion" class="mt-1 block w-full pl-2 pr-8 py-1 text-sm border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 rounded-md">
                <option value="a">Examen</option>
                <option value="b">Exposición</option>
                <option value="c">Mapas-Mental</option>
              </select>
            </div>
            <div>
              <div class="font-semibold text-blue-700 text-lg">Nómina de Notas</div>
              <table class="w-full text-sm text-left rtl:text-right text-gray-400 text-black bg-gray-400">
                <thead class="text-xxs text-gray-700 uppercase border-b border-gray-300">
                  <tr>
                    <th scope="col" class="px-4 py-2">
                      Estudiante
                    </th>
                    <th scope="col" class="px-4 py-2">
                      Cedula
                    </th>
                    <th scope="col" class="px-4 py-2">
                      Materia
                    </th>
                    <th scope="col" class="px-4 py-2">
                      Nota
                    </th>
                  </tr>
                </thead>
                <tbody>
                  <tr class="bg-white border-b border-gray-300 text-black">
                    <th scope="row" class="px-4 py-2 font-medium text-black whitespace-nowrap">
                      Maria Garcia
                    </th>

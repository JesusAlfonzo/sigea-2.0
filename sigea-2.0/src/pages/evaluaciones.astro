              </table>
            </div>
          </div>
        </div>
      </div>
      
      <!-- tabla de creacion de evaluaciones -->
      <div class="w-1/3 mx-auto mt-12 pr-4">
        <div class="font-bold text-2xl text-blue-700"> 
          <h2>Creación de Evaluaciones</h2>
        </div>
        <div class="bg-gray-300 mt-4">
          <div class="mx-4 sm:mx-auto py-6 px-4 sm:px-8 lg:px-10"> 
            <div class="w-full p-2 flex flex-col"> 
              <label for="titulo" class="block text-xs font-medium text-gray-700">Título:</label>
              <input type="text" id="titulo" name="titulo" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 text-lg"> 
            </div>
            <div class="w-full p-2 flex flex-col"> 
              <label for="semestre" class="block text-xs font-medium text-gray-700">Semestre:</label>
              <input type="text" id="semestre" name="semestre" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 text-lg"> 
            </div>
            <div class="w-full p-2 flex flex-col"> 
              <label for="materia" class="block text-xs font-medium text-gray-700">Materia:</label> 
              <input type="text" id="materia" name="materia" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 text-lg"> 
            </div>
            <div class="w-full p-2 flex flex-col"> 
              <label for="materia" class="block text-xs font-medium text-gray-700">Sección:</label> 
              <input type="text" id="materia" name="materia" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 text-lg"> 
            </div>
          </div>
          <div class="flex justify-center mt-2 pb-4">
            <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-1 px-2 rounded-lg text-base">Crear</button>
            <button class="bg-red-500 hover:bg-red-700 text-white font-bold py-1 px-2 rounded-lg ml-2 text-base">Eliminar</button> 
          </div>
        </div>
      </div>
    </main>
    
        <!-- Tailwind -->
      <script src="https://cdn.tailwindcss.com"></script>
    
    </body>

    main {
      background-image: url(../img/b25f2d5b-8c62-425b-8c5d-f2ff690aade8.png);
      background-repeat: no-repeat;
      background-size: cover; 
      background-attachment: fixed;
    }
    .container {
      background-color: white;
      width: 300px;
      margin: 0 auto; /* Centra horizontalmente */

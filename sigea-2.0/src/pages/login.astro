    <Nav />

    <div class="container text-center">
      <h2 class="text-2xl mb-4">Iniciar Sesi√≥n</h2>
      <form>
        <div class="mb-4">
          <label for="correo" class="block text-gray-700 font-bold mb-2">Introduzca su usuario</label>
          <input class="w-full px-3 py-2 leading-tight border border-gray-300 rounded focus:outline-none focus:border-indigo-500"/>
